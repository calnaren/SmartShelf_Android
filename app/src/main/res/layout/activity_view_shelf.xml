<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="smartshelf.pb4j.iot.smartshelf.ViewShelfActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/smartshelflogo"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Space
                    android:layout_width="27dp"
                    android:layout_height="1dp"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:id="@+id/pillBottle0"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/pillbottle" />

                <Space
                    android:layout_width="27dp"
                    android:layout_height="1dp"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:id="@+id/pillBottle1"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/pillbottle" />

                <Space
                    android:layout_width="27dp"
                    android:layout_height="1dp"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:id="@+id/pillBottle2"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/pillbottle" />

            </LinearLayout>

            <EditText
                android:layout_width="400dp"
                android:layout_height="20dp"
                android:id="@+id/tray1"
                android:layout_above="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:text=""
                android:editable="false"
                android:background="#000000" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Space
                    android:layout_width="27dp"
                    android:layout_height="1dp"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:id="@+id/pillBottle3"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/pillbottle" />

                <Space
                    android:layout_width="27dp"
                    android:layout_height="1dp"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:id="@+id/pillBottle4"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/pillbottle" />

                <Space
                    android:layout_width="27dp"
                    android:layout_height="1dp"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:id="@+id/pillBottle5"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/pillbottle" />

            </LinearLayout>

            <EditText
                android:layout_width="400dp"
                android:layout_height="20dp"
                android:id="@+id/tray2"
                android:layout_above="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:text=""
                android:editable="false"
                android:background="#000000" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Space
                    android:layout_width="27dp"
                    android:layout_height="1dp"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:id="@+id/pillBottle6"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/pillbottle" />

                <Space
                    android:layout_width="27dp"
                    android:layout_height="1dp"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:id="@+id/pillBottle7"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/pillbottle" />

                <Space
                    android:layout_width="27dp"
                    android:layout_height="1dp"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:id="@+id/pillBottle8"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/pillbottle" />

            </LinearLayout>

            <EditText
                android:layout_width="400dp"
                android:layout_height="20dp"
                android:id="@+id/tray3"
                android:layout_above="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:text=""
                android:editable="false"
                android:background="#000000" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Space
                android:layout_width="50dp"
                android:layout_height="1dp"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#aadddd"
                android:text="Back"
                android:textAllCaps="false"
                android:textSize="25dp"
                android:id="@+id/backButton"
                android:onClick="locateItemClick"
                android:layout_gravity="center_horizontal" />

            <Space
                android:layout_width="50dp"
                android:layout_height="1dp"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:background="#aadddd"
                android:text="Home"
                android:textSize="25dp"
                android:id="@+id/homeButton"
                android:onClick="viewShelfClick"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>
